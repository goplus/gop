import (
	self "github.com/goplus/xgo/cmd/internal/mod"
)

use "init [flags] module-path"

short "initialize new module in current directory"

flagOff

run args => {
	if args.len < 1 {
		help
		return
	}
	self.CmdInit.Run self.CmdInit, args
}
