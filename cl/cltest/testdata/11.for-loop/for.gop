// for with <-
sum := 0
for x <- [1, 3, 5, 7, 11, 13, 17], x > 3 {
	sum += x
}
println("sum(5,7,11,13,17):", sum)

fns := make([]func() int, 3)
for i, x <- [3, 15, 777] {
	v := x
	fns[i] = func() int {
		return v
	}
}
println("values:", fns[0](), fns[1](), fns[2]())

// for with range
sum = 0
arr := [1, 3, 5, 7]
m := {1: 1, 2: 4, 3: 8}
for range arr {
	sum++
}
println("sum==4", sum == 4)

sum = 0
for x := range arr {
	sum += x
}
println("sum==6", sum == 6)

sum = 0
for k, x := range m {
	sum += x + k
}
println("sum==19", sum == 19)

sum = 0
rangeX := 0
for _, rangeX = range [1, 3, 5, 7, 11] {
    if rangeX > 3 {
        sum += rangeX
    }
}
println("rangeX:", rangeX == 11, rangeX)
println("sum(1, 3, 5, 7, 11):", sum == 23, sum)

sum = 0
rangeX = 0
for _, rangeX = range [1, 3, 5] {
    sum += rangeX
    for rangeX, _ =range [0,2] {
        sum += rangeX
    }
}
println("rangeX:", rangeX == 1, rangeX)
println("sum(1, 3, 5)(0,2):", sum == 12, sum)

